<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/userImageIV"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/default_avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/buddyNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Dummy"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/userImageIV"
        app:layout_constraintStart_toEndOf="@+id/userImageIV"
        app:layout_constraintTop_toTopOf="@+id/userImageIV" />

    <TextView
        android:id="@+id/BuddyID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="ID:"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/userImageIV"
        app:layout_constraintTop_toBottomOf="@+id/buddyNameTV" />

    <TextView
        android:id="@+id/buddyIdTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="12345"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/BuddyID"
        app:layout_constraintTop_toBottomOf="@+id/buddyNameTV" />
</androidx.constraintlayout.widget.ConstraintLayout>